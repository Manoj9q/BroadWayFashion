                        android:fontFamily="@font/app_regular"
                        android:text="--"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey_edittext_hint"
                        android:textSize="@dimen/_11sdp" />
